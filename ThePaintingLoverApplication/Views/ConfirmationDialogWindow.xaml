<Window x:Class="ThePaintingLoverApplication.Views.ConfirmationDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThePaintingLoverApplication.Views"
        mc:Ignorable="d"
        Title="ConfirmationDialogWindow" Height="150" Width="300">
    <Grid Background="LightYellow">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="MessageTextBlock" Text="Are you sure you want to delete?" Margin="10" TextWrapping="Wrap" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Yes" Width="70" Background="BlanchedAlmond" Margin="5" Click="YesButton_Click"/>
                <Button Content="No" Width="70" Background="BlanchedAlmond" Margin="5" Click="NoButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
